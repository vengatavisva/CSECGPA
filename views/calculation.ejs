<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculate GPA</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        body {
            background: url('/assets/body-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: black;
            text-align: center;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        header {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 20px;
            background: url('/assets/header-background.jpg') no-repeat center center/cover;
            position: fixed;
            top: 0;
            left: 0;
            color: black;
            z-index: 1000;
        }
        .logo img {
            width: 60px;
            height: auto;
            margin-right: 15px;
        }
        .title h1 {
            font-size: 22px;
            color: black;
        }
        .title h2 {
            font-size: 18px;
            opacity: 0.8;
            color: black;
        }
        main {
            margin-top: 100px;
            padding: 20px;
            flex: 1;
        }
        .container {
            background: rgba(225, 237, 246, 0.8);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            width: 90%;
            max-width: 600px;
            margin: auto;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            min-height: 60vh;
        }
        .semester-box {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 15px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }
        th, td {
            border: 1px solid black;
            padding: 10px;
            text-align: center;
            word-wrap: break-word;
            white-space: normal;
        }
        .calculate-button {
            margin-top: 20px;
            padding: 12px 25px;
            background: black;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
        }
        .calculate-button:hover {
            background: gray;
            transform: scale(1.05);
        }
        #result {
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
            color: black;
        }

        /* Home Button - Always at Bottom */
        .home-button-container {
            text-align: center;
            margin-top: 30px;
            padding: 20px;
        }
        .home-button {
            background: linear-gradient(135deg, #ff8c00, #ff5e62);
            color: white;
            padding: 12px 25px;
            border-radius: 25px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
            transition: transform 0.3s ease-in-out;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }
        .home-button:hover {
            transform: scale(1.05);
        }
        footer {
            margin-top: auto;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <img src="/assets/psna_logo.png" alt="PSNA College Logo">
        </div>
        <div class="title">
            <h1>PSNA COLLEGE OF ENGINEERING AND TECHNOLOGY</h1>
            <h2>CSE CGPA CALCULATOR</h2>
        </div>
    </header>
    
    <main>
        <div class="container">
            <div class="semester-box">
                Selected Semester: <%= semester %>
            </div>
            <div class="table-container">
                <table id="gradeTable">
                    <tr>
                        <th>Code</th>
                        <th>Subject Name</th>
                        <th>Grade</th>
                    </tr>
                    <% subjects.forEach((subject, i) => { %>
                    <tr>
                        <td><%= subject.subjectCode %></td>
                        <td><%= subject.subjectName %></td>
                        <td>
                            <select name="grade<%= i %>" class="grade-select" data-credits="<%= subject.credits %>">
                                <option value="">Select</option>
                                <option value="O">O</option>
                                <option value="A+">A+</option>
                                <option value="A">A</option>
                                <option value="B+">B+</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="U">U</option>
                            </select>
                        </td>
                    </tr>
                    <% }); %>
                </table>
            </div>
            <button class="calculate-button" onclick="validateAndCalculate()">Calculate</button>
            <div id="result"></div>
        </div>

        <!-- Home Button Below Content -->
        <div class="home-button-container">
            <a href="/" class="home-button">Home</a>
        </div>
    </main>

    <footer>
        &copy; PSNA College of Engineering and Technology | CSE Department
    </footer>

    <script>
        function validateAndCalculate() {
            let grades = document.querySelectorAll('.grade-select');
            let totalCredits = 0;
            let totalGradePoints = 0;
            
            const gradePoints = {
                "O": 10,
                "A+": 9,
                "A": 8,
                "B+": 7,
                "B": 6,
                "C": 5,
                "U": 0 
            };

            let allFilled = true;

            grades.forEach(grade => {
                if (grade.value === "") {
                    allFilled = false;
                }
            });

            if (!allFilled) {
                alert("Please fill in all the grades before calculating.");
                return;
            }

            grades.forEach(grade => {
                let credit = parseFloat(grade.getAttribute("data-credits"));
                let gradeValue = grade.value;

                totalCredits += credit;
                totalGradePoints += gradePoints[gradeValue] * credit;
            });

            let gpa = totalGradePoints / totalCredits;
            document.getElementById("result").innerText = `Your GPA = ${gpa.toFixed(2)}`;
        }
    </script>
</body>
</html>
